{
  "name": "viking_ball_server",
  "description": "Viking Ball Minigame - Server",
  "author": "Pixie Interactive",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --clear src/main.ts",
    "schemas": "rm -r -f ./output && mkdir ./output && yarn schemas:rooms && yarn schemas:entities",
    "schemas:entities": "schema-codegen ./src/schemas/**/* --ts --output ./output/schemas",
    "schemas:rooms": "schema-codegen ./src/rooms/**/State.ts --ts --output ./output/schemas"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.14.22",
    "colyseus": "^0.14.23",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "matter-js": "^0.18.0",
    "victor": "^1.1.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/victor": "^1.1.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  }
}
